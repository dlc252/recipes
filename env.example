# Configuración básica de Django
SECRET_KEY=tu_clave_secreta_muy_larga_y_segura_aqui
DEBUG=0
ALLOWED_HOSTS=*

# Configuración de base de datos (Railway proporcionará DATABASE_URL automáticamente)
# DATABASE_URL se configurará automáticamente por Railway

# Configuración de Redis (opcional, Railway puede proporcionar Redis)
# REDIS_HOST=redis.railway.internal
# REDIS_PORT=6379

# Configuración de archivos estáticos y media
STATIC_URL=/static/
STATIC_ROOT=/opt/recipes/staticfiles
MEDIA_URL=/media/
MEDIA_ROOT=/opt/recipes/mediafiles

# Configuración de email (opcional)
EMAIL_HOST=
EMAIL_PORT=25
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
EMAIL_USE_TLS=0
EMAIL_USE_SSL=0
DEFAULT_FROM_EMAIL=webmaster@localhost

# Configuración de autenticación
ENABLE_SIGNUP=1
SOCIAL_DEFAULT_ACCESS=0
SOCIAL_DEFAULT_GROUP=guest

# Configuración de espacio
SPACE_DEFAULT_MAX_RECIPES=0
SPACE_DEFAULT_MAX_USERS=0
SPACE_DEFAULT_MAX_FILES=0
SPACE_DEFAULT_ALLOW_SHARING=1
SPACE_AI_ENABLED=1
SPACE_AI_CREDITS_MONTHLY=10000

# Configuración de zona horaria
TZ=Europe/Madrid

# Configuración de logging
LOG_LEVEL=WARNING

# Configuración de CORS
CORS_ALLOW_ALL_ORIGINS=1

# Configuración de archivos (opcional - para usar S3)
# S3_ACCESS_KEY=
# S3_SECRET_ACCESS_KEY=
# S3_BUCKET_NAME=
# S3_REGION_NAME=

# Configuración de hCaptcha (opcional)
# HCAPTCHA_SITEKEY=
# HCAPTCHA_SECRET=

# Configuración de API de FDC (opcional)
# FDC_API_KEY=DEMO_KEY

# Configuración de AI (opcional)
# AI_RATELIMIT=60/hour

# Configuración de métricas (opcional)
ENABLE_METRICS=0

# Configuración de PDF export (opcional)
ENABLE_PDF_EXPORT=0
